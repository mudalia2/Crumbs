<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#dfcdb6"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- Price Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:textSize="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>
            <TextView
                android:id="@+id/dollar1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$"
                android:clickable="true"
                android:onClick="price1"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#cfb593"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/dollar2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$$"
                android:clickable="true"
                android:onClick="price2"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#cfb593"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/dollar3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$$$"
                android:clickable="true"
                android:onClick="price3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#cfb593"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <!-- Cuisine Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisine"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/search_cuisine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Tap to Add Cuisines..."
            android:background="@drawable/editstyle"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/editstyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Italian"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Indian"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Chinese"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="French"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Thai"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Japanese"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Swiss"
                    android:textColor="#000000"
                    android:background="#f6f1eb"
                    android:layout_weight="0.05"/>
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!-- Distance Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/distance1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1 mile"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="#cfb593"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/distance2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5 miles"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="#cfb593"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <TextView
                android:id="@+id/distance3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10 miles"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="#cfb593"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

</LinearLayout> <!-- Whole Screen-->
